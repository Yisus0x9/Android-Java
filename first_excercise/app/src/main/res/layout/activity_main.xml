<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp" android:hint="Matemáticas"
            app:layout_constraintTop_toBottomOf="@+id/textViewStatus" android:layout_marginTop="40dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintTop_toBottomOf="@+id/editText1" android:layout_marginTop="32dp" android:hint="Física"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginTop="30dp"
            android:hint="Biología"/>
    <Button
            android:text="Evaluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonEvaluate"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/editText3"/>
    <TextView
            android:text="Status :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewStatus" tools:layout_editor_absoluteY="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp" android:textSize="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>