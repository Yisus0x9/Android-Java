<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:id="@+id/eTNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:textSize="20dp"
            android:hint="Ingresa un número"
            tools:layout_editor_absoluteY="54dp"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>
    <EditText
            android:id="@+id/eTNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:textSize="20dp"
            android:hint="Ingresa un número"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/eTNum1"
            android:layout_marginTop="14dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>

    <Button
            android:id="@+id/btSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumar"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/eTNum2"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>

    <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado: "
            android:textSize="30dp"
            app:layout_constraintStart_toEndOf="@+id/btSum"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/eTNum2"
            android:layout_marginTop="31dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
